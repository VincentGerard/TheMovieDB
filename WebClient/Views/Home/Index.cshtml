@model WebClient.Models.HtmlModel
@{
    ViewData["Title"] = "Home Page";
}

	<div class="text-center">
		<table class="table-bordered">
			<thead>
				<tr>
					<th width="50">Id</th>
					<th width="150">Titre</th>
					<th width="100">Duree</th>
					<th width="200">Note Moyenne</th>
					<th width="500">Affiche</th>
					<th width="200">Details</th>
				</tr>
			</thead>
			<tbody>

				@foreach (var item in Model.list)
				{
					string stringID = "Details/" + item.Id.ToString();
					int h = item.Runtime / 60;
					int m = item.Runtime - h * 60;
					string temp = string.Format("{0}h{1:00}", h, m);

					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.Title</td>
						<td>@temp</td>
						<td>@item.VoteAverage</td>
						<td>
							<img src="@item.PosterPath" height="200" />
						</td>
						<td >
							@Html.ActionLink("Details","Details","Home",new { ID=item.Id });
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>

